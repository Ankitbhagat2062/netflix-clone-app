{
  "name": "pdf-merger",
  "version": "1.0.0",
  "description": "A Node.js application to merge PDF files using pdf-merger-js and serverless functions on Vercel.",
  "main": "index.js",  // Change to the main file if you use serverless functions
  "scripts": {
    "start": "vercel dev",  // Use vercel dev for local development
    "build": "vercel build",
    "deploy": "vercel deploy" // Optional: you can deploy directly from command line
  },
  "keywords": [
    "pdf",
    "merge",
    "nodejs",
    "serverless",
    "vercel",
    "pdf-merge"
  ],
  "author": "Ankit Bhagat",
  "license": "ISC",
  "dependencies": {
    "express": "^4.21.2",  // Express used for local development, but Vercel will rely on serverless functions
    "multer": "^1.4.5-lts.1",
    "pdf-lib": "^1.17.1",
    "pdf-merge": "^1.2.0",
    "pdf-merger-js": "^5.1.2",
    "rimraf": "^6.0.1",
    "vercel": "^32.3.0"  // Vercel CLI dependency for local testing and deployment
  },
  "devDependencies": {
    "nodemon": "^3.1.9"  // Useful for local dev testing if needed
  },
  "type": "module",  // Ensures usage of ES modules
  "engines": {
    "node": ">=16.0.0"
  },
  "directories": {
    "public": "public",
    "scripts": "JS",
    "styles": "CSS",
    "views": "templates"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Ankitbhagat2062/pdf-merger"
  },
  "bugs": {
    "url": "https://github.com/Ankitbhagat2062/pdf-merger/issues"
  },
  "homepage": "https://github.com/Ankitbhagat2062/pdf-merger#readme"
}
